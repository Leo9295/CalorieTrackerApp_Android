<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUpActivities.SignUpFitInfoActivity">

    <TextView
        android:id="@+id/tv_fixedInSignUp5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="22dp"
        android:text="Fitness Information"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_fixedInSignUp6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="60dp"
        android:text="These infomation will be used to calculate your Basal Metabolic Rate (BMR)."
        android:textSize="20dp"/>

    <Button
        android:id="@+id/nextBtnSign4"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="94dp"
        android:layout_marginRight="94dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/btn_bg_blue"
        android:gravity="center"
        android:text="FINISH SIGN UP" />

    <Spinner
        android:id="@+id/sp_activeLevel"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="207dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:dropDownWidth="match_parent" />

    <TextView
        android:id="@+id/tv_fixedInSignUp_levelOfAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="170dp"
        android:text="Level Of Activity *"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_fixedInSignUp_stepsPerMile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="263dp"
        android:text="Steps Number Per Mile * "
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_stepPerMile"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginBottom="248dp"
        android:ems="10"
        android:inputType="number" />

</RelativeLayout>